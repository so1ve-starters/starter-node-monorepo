{
	"name": "@org-name/monorepo",
	"private": true,
	"packageManager": "pnpm@8.8.0",
	"scripts": {
		"build": "pnpm -r run build",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm publish -r --filter ./packages/*",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"watch": "pnpm -r --parallel run watch"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.3",
		"@so1ve/eslint-config": "^1.0.0-alpha.4",
		"@so1ve/prettier-config": "^1.0.0-alpha.4",
		"@types/node": "^18.16.6",
		"bumpp": "^9.1.0",
		"eslint": "^8.50.0",
		"pkgroll": "^1.10.0",
		"prettier": "^3.0.0",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"vite": "^4.3.5",
		"vitest": "^0.34.0"
	}
}
